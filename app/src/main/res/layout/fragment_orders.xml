<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/orderTitle"
        android:layout_width="904dp"
        android:layout_height="wrap_content"
        android:text="ORDERS"
        android:textSize="40sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/ordertitlelinetop"
        android:layout_width="904dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/orderTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <LinearLayout
        android:id="@+id/orderInfotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ordertitlelinetop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:id="@+id/ordertitleline1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />
        <TextView
            android:id="@+id/orderIdTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="ORDER ID"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/ordertitleline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/orderTableNoTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="TABLE NO"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/ordertitleline3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/orderStatusTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/ordertitleline4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orders_recyclerview"
        android:layout_width="904dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/orderInfotitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/textview_border"/>

</androidx.constraintlayout.widget.ConstraintLayout>
